<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginFragment">

    <ImageView
        android:id="@+id/BackgroundImageView"
        android:layout_width="321dp"
        android:layout_height="251dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:src="@drawable/welcomeback_pic"
        android:contentDescription="@string/background_image_description" />

    <ImageView
        android:id="@+id/get_started_text"
        android:layout_width="210dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="159dp"
        android:src="@drawable/get_started_text"
        android:contentDescription="@string/get_started_text_description" />

    <ImageView
        android:id="@+id/make_free_acc_text"
        android:layout_width="183dp"
        android:layout_height="17dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="203dp"
        android:src="@drawable/free_acc_text"
        android:contentDescription="@string/free_account_text_description" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/full_name"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="256dp"
        android:hint="@string/full_name_hint">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fullnametext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle5"
            android:textColor="@color/high_contrast_text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/valid_mail"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="325dp"
        android:hint="@string/valid_email_hint">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/mailtext2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle5"
            android:textColor="@color/high_contrast_text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/strong_password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="390dp"
        android:hint="@string/password_hint">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/strongpasstext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle5"
            android:textColor="@color/high_contrast_text" />
    </com.google.android.material.textfield.TextInputLayout>

    <CheckBox
        android:id="@+id/rectangle2"
        android:layout_width="12dp"
        android:layout_height="9dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="460dp"
        android:button="@drawable/rectangle6"
        android:buttonTint="@color/black"
        android:contentDescription="@string/accept_terms_checkbox_description" />

    <ImageView
        android:id="@+id/terms_box_text"
        android:layout_width="241dp"
        android:layout_height="10dp"
        android:layout_marginTop="460dp"
        android:layout_marginStart="90dp"
        android:background="@drawable/checking_the_box_text"
        android:contentDescription="@string/terms_box_text_description" />

    <Button
        android:id="@+id/myButton2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="638dp"
        android:background="@drawable/button"
        android:text="@string/button_next" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/memberlogin"
        android:layout_width="176dp"
        android:layout_height="15dp"
        android:layout_marginTop="703dp"
        android:layout_marginStart="113dp"
        android:background="@drawable/a_member_log_in_text"
        android:contentDescription="@string/member_login_button_description" />
</FrameLayout>
